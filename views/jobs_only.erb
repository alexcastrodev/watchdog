<!-- Header -->
<div class="header-section p-4 text-center rounded-top-4">
    <div class="d-flex justify-content-between align-items-center">
        <a href="/" class="btn btn-outline-light">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
        <h1 class="display-5 fw-bold mb-0">
            <i class="bi bi-gear me-3"></i>Active Jobs
        </h1>
        <a href="/logs" class="btn btn-outline-info">
            <i class="bi bi-file-text me-2"></i>View Logs
        </a>
    </div>
</div>

<!-- Content -->
<div class="p-4">
    <% if @job_files.empty? %>
        <div class="text-center py-5">
            <i class="bi bi-gear display-1 text-muted"></i>
            <h3 class="mt-3 text-light">No Active Jobs</h3>
            <p class="text-muted">All jobs are completed or no jobs are running</p>
            <div class="mt-4">
                <a href="/" class="btn btn-danger">
                    <i class="bi bi-house me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    <% else %>
        <!-- Job Count -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-secondary text-center">
                    <div class="card-body">
                        <h2 class="text-success fw-bold mb-1"><%= @job_files.length %></h2>
                        <p class="text-muted mb-0">Active Job<%= @job_files.length != 1 ? 's' : '' %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Jobs Grid -->
        <div class="row g-4">
            <% @job_files.each do |job_file| %>
                <%= erb :'partials/_job_card', locals: { job_file: job_file } %>
            <% end %>
        </div>
    <% end %>
</div>